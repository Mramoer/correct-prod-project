{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ES6",
		"jsx": "react-jsx",
		"baseUrl": "./src",
		"allowJs": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS",
			"types": ["node", "jest", "@testing-library/jest-dom"]
		}
	},
	"include": ["src", "./config/jest/setupTests.ts"]
}
